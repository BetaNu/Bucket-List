<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Bucket List{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">


    <link rel="icon" href="{{ asset('img/favicon.png') }}">
</head>
<body>
    <header>
        <h1><a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.svg') }}" alt="Logo Bucket List" width="30" height="30"> Bucket List</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('main_home') }}">Home</a></li>
                <li><a href="{{ path('main_about') }}">About us</a></li>
                <li><a href="{{ path('wish_list') }}">Wishlist</a></li>
                {% if(app.user) %}
                <li><a href="{{ path('wish_create') }}">Add a wish</a></li>
                {% endif %}
            </ul>
        </nav>
        <div>
            <ul id="log">
            {% if(app.user) %}
                <li><p>Hello {{ app.user.pseudo }}</p></li>
                <li><a href="{{ path('app_logout') }}" title="Logout">Logout</a> </li>
            {% else %}
                <li><a href="{{ path('app_login') }}">Login</a></li>
                <li><a href="{{ path('app_register') }}">Register</a></li>
            {% endif %}
            </ul>
        </div>
    </header>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <main>
        {% block main %}

        {% endblock %}
    </main>

    <footer>
        <p>&copy; Bucket List {{ "now"|date("Y") }}</p>
    </footer>
</body>
</html>